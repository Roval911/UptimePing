# Environment Configuration
ENVIRONMENT=dev

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uptimeping
DB_USER=uptimeping
DB_PASSWORD=uptimeping

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration - CHANGE IN PRODUCTION!
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=7d

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=notifications
RABBITMQ_ROUTING_KEY=notification.events
RABBITMQ_QUEUE=notifications

# gRPC Configuration
GRPC_PORT=50051

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Health Check Configuration
HEALTH_ENABLED=true
HEALTH_PORT=8081

# Forge Service Configuration
PROTO_DIR=proto
OUTPUT_DIR=generated

# Scheduler Configuration
SCHEDULER_MAX_CONCURRENT_TASKS=10
SCHEDULER_TASK_TIMEOUT=30s
SCHEDULER_CLEANUP_INTERVAL=1h
SCHEDULER_LOCK_TIMEOUT=5m

# Gateway Configuration
GATEWAY_LOAD_BALANCER_STRATEGY=round_robin
GATEWAY_HEALTH_CHECK_INTERVAL=30s
GATEWAY_CORS_ORIGINS=*
GATEWAY_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
GATEWAY_CORS_HEADERS=*
GATEWAY_CORS_MAX_AGE=86400
GATEWAY_TIMEOUT_READ=30s
GATEWAY_TIMEOUT_WRITE=30s
GATEWAY_TIMEOUT_IDLE=120s

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1s
RETRY_MAX_DELAY=30s
RETRY_MULTIPLIER=2.0
RETRY_JITTER=true
RETRY_JITTER_RANGE=0.1

# Notification Providers
TELEGRAM_BOT_TOKEN=
TELEGRAM_API_URL=https://api.telegram.org
TELEGRAM_TIMEOUT=30s
TELEGRAM_RETRY_ATTEMPTS=3

SLACK_BOT_TOKEN=
SLACK_WEBHOOK_URL=
SLACK_API_URL=https://slack.com/api
SLACK_TIMEOUT=30s
SLACK_RETRY_ATTEMPTS=3

EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@uptimeping.com
EMAIL_FROM_NAME=UptimePing Platform
EMAIL_USE_STARTTLS=true
EMAIL_TIMEOUT=30s
EMAIL_RETRY_ATTEMPTS=3

# Incident Manager
INCIDENT_MANAGER_ADDR=localhost:50052
