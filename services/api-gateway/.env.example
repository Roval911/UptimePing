# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration (для Auth Service)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uptimeping
DB_USER=uptimeping
DB_PASSWORD=uptimeping

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONN=2
REDIS_MAX_RETRIES=3
REDIS_RETRY_INTERVAL=1s
REDIS_HEALTH_CHECK=30s

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1s
RETRY_MAX_DELAY=30s
RETRY_MULTIPLIER=2.0
RETRY_JITTER=true
RETRY_JITTER_RANGE=0.1

# Environment
ENVIRONMENT=dev

# Gateway Configuration
GATEWAY_LOAD_BALANCER_STRATEGY=round_robin
GATEWAY_HEALTH_CHECK_INTERVAL=30s

# CORS Configuration
GATEWAY_CORS_ORIGINS=*
GATEWAY_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
GATEWAY_CORS_HEADERS=*
GATEWAY_CORS_MAX_AGE=86400

# Timeout Configuration
GATEWAY_TIMEOUT_READ=30s
GATEWAY_TIMEOUT_WRITE=30s
GATEWAY_TIMEOUT_IDLE=120s
