# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_AUTH_QUEUE=auth_notifications

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Environment
ENVIRONMENT=dev
