# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8081
GRPC_PORT=50051

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uptimeping
DB_USER=uptimeping
DB_PASSWORD=uptimeping

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONN=2
REDIS_MAX_RETRIES=3
REDIS_RETRY_INTERVAL=1s
REDIS_HEALTH_CHECK=30s

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# JWT Configuration
