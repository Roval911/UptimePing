# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=50056

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uptimeping
DB_USER=uptimeping
DB_PASSWORD=uptimeping

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_NOTIFICATIONS_EXCHANGE=notifications
RABBITMQ_NOTIFICATIONS_ROUTING_KEY=notification.events

# Telegram Bot Token
# Получите у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Slack Configuration
# Bot Token: https://api.slack.com/apps
SLACK_BOT_TOKEN=your_slack_bot_token_here
# Webhook URL: создайте в Slack workspace
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Configuration
# SMTP сервер (Gmail пример)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_ADDRESS=noreply@uptimeping.com

# Для Gmail используйте App Password:
# 1. Включите 2FA в Google Account
# 2. Перейдите в Security -> 2-Step Verification -> App passwords
# 3. Создайте новый пароль для приложения

# Environment
ENVIRONMENT=dev
