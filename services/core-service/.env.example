# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8081

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=uptimeping
DB_USER=uptimeping
DB_PASSWORD=uptimeping

# Alternative: Full Database URL
# DATABASE_URL=postgres://user:password@localhost/uptimedb?sslmode=disable

