# Environment Configuration for UptimePingPlatform
# Copy this file to .env.local and modify as needed

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=uptimeping
DATABASE_USER=uptimeping
DATABASE_PASSWORD=uptimeping123
DATABASE_SSLMODE=disable

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://uptimeping:uptimeping123@localhost:5672/
RABBITMQ_MANAGEMENT_URL=http://uptimeping:uptimeping123@localhost:15672

# Service Ports
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=50051
SCHEDULER_SERVICE_PORT=50052
FORGE_SERVICE_PORT=50053
CORE_SERVICE_PORT=50054
METRICS_SERVICE_PORT=50055
INCIDENT_SERVICE_PORT=50056
NOTIFICATION_SERVICE_PORT=50057

# Service Addresses (for local development)
AUTH_SERVICE_ADDR=localhost:50051
SCHEDULER_SERVICE_ADDR=localhost:50052
FORGE_SERVICE_ADDR=localhost:50053
CORE_SERVICE_ADDR=localhost:50054
METRICS_SERVICE_ADDR=localhost:50055
INCIDENT_SERVICE_ADDR=localhost:50056
NOTIFICATION_SERVICE_ADDR=localhost:50057

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE_IN=24h
REFRESH_TOKEN_EXPIRE_IN=168h

# API Key Configuration
API_KEY_SECRET=your-api-key-secret-change-in-production
API_KEY_EXPIRE_IN=8760h

# Rate Limiting
RATE_LIMIT_REDIS=redis:6379
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
ENVIRONMENT=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Monitoring Configuration
PROMETHEUS_GATEWAY_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
LOKI_URL=http://localhost:3100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@uptimeping.local
SMTP_TLS=true

# Worker Configuration
WORKER_POOL_SIZE=10
MAX_RETRY_ATTEMPTS=3
RETRY_INITIAL_DELAY=1s
RETRY_MAX_DELAY=30s

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1

# Development Configuration
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Security Configuration
ENABLE_HTTPS=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# CLI Configuration
CLI_OUTPUT_FORMAT=json
CLI_TIMEOUT=30s
